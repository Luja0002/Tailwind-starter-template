<section class="w-full bg-black flex items-start justify-center h-screen sticky top-0 z-0">
	<h1 class="text-center text-[17vw] font-bold leading-none text-secondary pt-20 opacity-0 animate-on-scroll">
	  (MY SKILLS)
	</h1>
  </section>
  
  <style>
  @keyframes fade-in {
	0% { opacity: 0; transform: translateY(20px); }
	100% { opacity: 1; transform: translateY(0); }
  }
  
  .animate-on-scroll {
	opacity: 0;
	transition: opacity 1s ease-out, transform 1s ease-out;
  }
  
  .animate-on-scroll.scroll-visible {
	opacity: 1;
	animation: fade-in 1s forwards;
  }
  </style>
  
  <script>
  const el = document.querySelector('.animate-on-scroll');
  
  window.addEventListener('scroll', () => {
	const rect = el.getBoundingClientRect();
	
	// Hvis sektionen er 80% synlig
	if(rect.top < window.innerHeight * 0.8 && rect.bottom > 0) {
	  el.classList.add('scroll-visible');
	} else {
	  el.classList.remove('scroll-visible'); // fjerner animationen når man scroller væk
	}
  });
  </script>
  
  
  
  <!-- Overlappende sektion med blur på baggrund -->
  <section class="w-full flex items-center justify-center -mt-40 relative z-10 backdrop-blur-xl pb-64">
